{{#contentFor "pagesCss"}}
  <!-- DataTables -->
  <link rel="stylesheet" href="/adminator/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
{{/contentFor}}

{{#contentFor "pagesStyle"}}
  
{{/contentFor}}

{{#contentFor "pageScripts"}}
  <!-- DataTables -->
<script src="/adminator/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="/adminator/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
{{/contentFor}}
{{#contentFor "pageJs"}}
  <!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable();
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  });
  $(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip(); 
    });
</script>
{{/contentFor}}

<!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Dashboard
        <small>Sản phẩm</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Sản phẩm</a></li>
        <li class="active">Danh sách sản phẩm</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
          <div class="col-sm-12">
              <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách danh mục</h3>
                    <a href="/backend/catproduct/create" class="btn btn-success btn-sm" style="float:right"><i class="fa fa-plus" aria-hidden="true"></i> Thêm</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                    <th>Ảnh</th>
                    <th>Tên danh mục</th>
                    <th>Trang thái</th>
                    <th>Hành động</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{# each results }}
                    <tr>
                    <td style="width:120px;text-align:center"><img style="width: 100px" src={{this.imageNumber.path}} alt=""></td>
                    <td>{{ this.name }}</td>
                    <td>-</td>
                    <td style="width:120px;text-align:center">
                        <a href="/backend/product/show/{{this._id}}" data-toggle="tooltip" title="Sửa" class="btn btn-warning btn-sm">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </a>
                        <a href="" data-toggle="tooltip" title="Xóa" class="btn btn-danger btn-sm">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
          </div>
      </div>
    </section>
    <!-- /.content -->

{{#contentFor "pagesCss"}}
  <!-- DataTables -->
  <link rel="stylesheet" href="/gallery/gallery.css">
{{/contentFor}}

{{#contentFor "pagesStyle"}}

{{/contentFor}}

{{#contentFor "pageScripts"}}
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
<script src="/gallery/gallery.js"></script>
{{/contentFor}}
{{#contentFor "pageJs"}}
  <!-- page script -->
<script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();  
});
</script>
{{/contentFor}}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
    Dashboard
    <small>Thêm tài khoản</small>
    </h1>
    <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
    <li class="active">Thêm tài khoản</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Info boxes -->
    <div class="">
        <div class="box">
            <form action="/backend/admin/store" method="post" enctype="application/x-www-form-urlencoded">
                <div class="box-header">
                    <h3 class="box-title">Thêm tài khoản</h3>
                    <button type="submit" class="btn btn-sm btn-success" style="float:right">
                        <i class="fa fa-plus"></i> Thêm
                    </button>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="name">Tên</label>
                            <input type="text" name="name" class="form-control" placeholder="Tên" required>
                        </div>
                        <div class="form-group">
                            <label for="Email">E-mail</label>
                            <input type="text" name="email" class="form-control" placeholder="E-mail" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="password" class="form-control" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">Điện thoại</label>
                            <input type="text" name="phone" class="form-control" placeholder="Điện thoại">
                        </div>
                        <div class="form-group">
                            <label for="zalo">Zalo</label>
                            <input type="text" name="zalo" class="form-control" placeholder="Zalo">
                        </div>
                        <div class="form-group">
                            <label for="facebook">Facebook</label>
                            <input type="text" name="facebook" class="form-control" placeholder="Facebook">
                        </div>
                        <div class="form-group">
                            <label for="website">Website</label>
                            <input type="text" name="website" class="form-control" placeholder="Website">
                        </div>
                        <div class="form-group">
                            <label for="gplus">Google+</label>
                            <input type="text" name="gplus" class="form-control" placeholder="Google+">
                        </div>
                        <div class="form-group">
                            <label for="address">Địa chỉ</label>
                            <input type="text" name="address" class="form-control" placeholder="Địa chỉ">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="image">Ảnh đại diện</label>
                            <div class="clearfix"></div>
                            <input type="text" id="imageNumber" name="imageNumber">
                            <input type="text" id="imagePath" name="imagePath">
                            <div class="showImageUpload imagePath clearfix" >
                                <a class="btn btn-sm btn-primary select_image" onclick=showModalGallery('imageNumber',0) data-colum="imageNumber" limit="0">Chọn ảnh</a>
                                <div class="show_imageNumber">
                                    <div class="in_showImageUpload">
                                        <div class="divShowImageUpload imageNumber">
                                            <img src="/adminator/images/user_default.jpg" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                            <div class="checkbox">
                            <label>
                                <input type="checkbox" name="active"> Kích hoạt
                            </label>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </form>
        </div>
        <!-- /.box -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
{{> 'backend/managerGallery/modalGallery' }}